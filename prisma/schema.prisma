generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// TimeSlot enum: user-entered medication timing category (no medical logic)
enum TimeSlot {
  MORNING
  AFTERNOON
  EVENING
  NIGHT
}

// IntakeStatus enum: binary logging status for medication intake
enum IntakeStatus {
  TAKEN
  MISSED
}

// User: patient identity and timestamps
model User {
  id            String               @id @default(cuid())
  conditions    DiagnosedCondition[]
  medications   Medication[]
  intakeLogs    MedicationIntakeLog[]
  snapshots     AwarenessSnapshot[]
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt
}

// DiagnosedCondition: user-entered condition with optional reference note
model DiagnosedCondition {
  id            String       @id @default(cuid())
  userId        String
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  name          String
  note          String?
  medications   Medication[]
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([userId])
}

// Auth.js (NextAuth) Prisma Adapter models
model Account {
  id                 String   @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Medication: user-entered medication, optionally linked to a condition
model Medication {
  id            String               @id @default(cuid())
  userId        String
  user          User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  name          String
  schedules     MedicationSchedule[]
  conditions    DiagnosedCondition[]
  intakeLogs    MedicationIntakeLog[]
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt

  @@index([userId])
}

// MedicationSchedule: single time slot for a medication (user-entered timing)
model MedicationSchedule {
  id            String     @id @default(cuid())
  medicationId  String
  medication    Medication @relation(fields: [medicationId], references: [id], onDelete: Cascade)
  timeSlot      TimeSlot
  frequency     String     // user-entered frequency (e.g., "once-daily", "twice-daily", "as-needed")
  timing        String     // user-entered timing notes (e.g., "with breakfast", "before bed")
  note          String?    // optional user note
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  intakeLogs    MedicationIntakeLog[]

  @@index([medicationId])
}

// MedicationIntakeLog: immutable per (schedule x day) logging of intake
model MedicationIntakeLog {
  id            String        @id @default(cuid())
  userId        String
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  medicationId  String
  medication    Medication    @relation(fields: [medicationId], references: [id], onDelete: Cascade)
  scheduleId    String
  schedule      MedicationSchedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  scheduledTime TimeSlot
  actualTime    DateTime?
  status        IntakeStatus
  observation   String?
  logDate       String        // YYYY-MM-DD to enforce per-day uniqueness
  createdAt     DateTime      @default(now())

  @@unique([scheduleId, logDate])
  @@index([userId])
  @@index([medicationId])
  @@index([scheduleId])
}

// AwarenessSnapshot: persistent AI-derived awareness output
model AwarenessSnapshot {
  id                      String   @id @default(cuid())
  userId                  String
  user                    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  timeWindow              String   // e.g., "7d", "14d", "30d"
  medicationPatterns      String   // JSON: MedicationPattern[]
  adherenceSignals        String   // JSON: AdherenceSignal[]
  observationAssociations String   // JSON: ObservationAssociation[]
  dataSufficiency         Boolean  // true if AI was run, false if insufficient data
  generatedAt             DateTime @default(now())
  createdAt               DateTime @default(now())

  @@unique([userId, timeWindow])
  @@index([userId])
}

